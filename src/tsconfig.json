{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "root/*": [
        "./src/*"
      ],
      "app/*": [
        "./app/*"
      ],
      "shared/*": [
        "./shared/*"
      ],
      "platforms/*": [
        "./platforms/*"
      ]
    }
  },
  "typeRoots": [
    ".",
    "../node_modules/@types"
  ]
}
